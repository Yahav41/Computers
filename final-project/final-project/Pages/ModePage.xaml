            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/BackGrounds/MenuBackground.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Viewbox Grid.Row="14" Grid.Column="9" Grid.ColumnSpan="8" Grid.RowSpan="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button x:Name="OfflineButton" Click="OfflineButton_Click" Background="Transparent" BorderBrush="Transparent" Foreground="Transparent">
                <Image Source="/Assets/Buttons/OfflineButton.png"></Image>
            </Button>
        </Viewbox>
        <Viewbox Grid.Row="17   " Grid.Column="9" Grid.ColumnSpan="8" Grid.RowSpan="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button x:Name="LocalButton" Click="LocalButton_Click" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Assets/Buttons/LocalButton.png"></Image>
            </Button>
        </Viewbox>
        <Viewbox Grid.Row="20" Grid.Column="9" Grid.ColumnSpan="8" Grid.RowSpan="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button x:Name="OnlineButton" Click="OnlineButton_Click" Background="Transparent" BorderBrush="Transparent" Foreground="Transparent">
                <Image Source="/Assets/Buttons/OnlineButton.png"></Image>
            </Button>
        </Viewbox>
        <Viewbox>
            <Image Source="/Assets/Logos/player.png"/>
        </Viewbox>
        <Viewbox>
            <Image Source="/Assets/Logos/player.png"/>
        </Viewbox>
        <Viewbox Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Button x:Name="BackButton" Click="BackButton_Click" Background="Transparent" BorderBrush="Transparent" Foreground="Transparent">
                <Image Source="/Assets/Buttons/BackButton.png"></Image>
            </Button>
        </Viewbox>
        <Viewbox Grid.Row="18" Grid.Column="4" Grid.ColumnSpan="4">
            <Button x:Name="NextButton1" Content="Next Character" Click="NextImageButton_Click"/>
        </Viewbox>
        <Viewbox Grid.Row="10" Grid.Column="4" Grid.RowSpan="8" Grid.ColumnSpan="4" >
            <Image x:Name="ChosenImage1" Width="150" Height="150" Stretch="Uniform" Source="/Assets/Models/Players/pistol/pistol-walk.gif" Margin="0"/>
        </Viewbox>
        <Viewbox Grid.Row="18" Grid.Column="18" Grid.ColumnSpan="4">
            <Button x:Name="NextButton2" Content="Next Character" Click="NextImageButton_Click"/>
        </Viewbox>
        <Viewbox Grid.Row="10" Grid.Column="18" Grid.RowSpan="8" Grid.ColumnSpan="4" >
            <Image x:Name="ChosenImage2" Width="150" FlowDirection="RightToLeft" Height="150" Stretch="Uniform" Source="/Assets/Models/Players/pistol/pistol-walk.gif" Margin="0"/>
        </Viewbox>
    </Grid>
</Page>
