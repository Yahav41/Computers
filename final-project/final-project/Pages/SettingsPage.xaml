        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/BackGrounds/MenuBackground.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Viewbox Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Button x:Name="BackButton" Click="BackButton_Click" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Assets/Buttons/BackButton.png"></Image>
            </Button>
        </Viewbox>
        <Viewbox Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Button x:Name="KeysButton" Click="KeysButton_Click" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Assets/Buttons/KeysButton.png"></Image>
            </Button>
        </Viewbox>
        <Viewbox Grid.Column="0" Grid.Row="11" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Button x:Name="AudioButton" Click="AudioButton_Click" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Assets/Buttons/BlankButton.png"></Image>
            </Button>
        </Viewbox>
        <Grid x:Name="KeysGrid" Grid.Row="9" Grid.Column="5" Grid.ColumnSpan="15" Grid.RowSpan="13" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Color="#f3e3c1" Opacity="1"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
