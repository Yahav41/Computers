                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Viewbox Grid.ColumnSpan="2" Grid.RowSpan="2">
                <Button x:Name="CloseButtonAudio" Click="CloseButton_Click" Background="Transparent" BorderBrush="Transparent">
                    <Image Source="/Assets/Buttons/CloseButton.png"></Image>
                </Button>
            </Viewbox>
            <Viewbox Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="9" Grid.RowSpan="2">
                <Slider x:Name="VolumeSlider" Minimum="0" Maximum="100" Value="100" ValueChanged="VolumeSlider_ValueChanged" Width="220"></Slider>
            </Viewbox>
        </Grid>
    </Grid>
</Page>
